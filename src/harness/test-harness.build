<?xml version="1.0"?>
<project name="TestHarness" default="build" basedir=".">

  <target name="build">
    
    <exec program="${build.command}" verbose="true">
        <arg line='"test-harness-${msbuild.proj.suffix}.csproj"' />
        <arg line="/property:Configuration=${build.config}" />
        <arg line="/property:OutputPath=${current.build.dir}" />
        <arg value="/target:Rebuild" />
        <arg value="/verbosity:normal" />
    </exec>
  
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/harness">
      <fileset>
        <include name="test-harness.build"/>
        <include name="*.csproj"/>
        <include name="*.cs"/>
		  <include name="Tests/*.cs"/>
      </fileset>
    </copy>
  </target>

</project>

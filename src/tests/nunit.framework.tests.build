<?xml version="1.0"?>
<project name="NUnitFrameworkTests" default="build" basedir=".">
  <patternset id="Microsoft.Bcl.Async_net-4.0">
    <include if="${runtime.config=='net-4.0'}" name="${path::combine(project.packages.dir,'Microsoft.Bcl.Async.1.0.165/lib/net40/Microsoft.Threading.Tasks.dll')}" />
    <include if="${runtime.config=='net-4.0'}" name="${path::combine(project.packages.dir,'Microsoft.Bcl.Async.1.0.165/lib/net40/Microsoft.Threading.Tasks.Extensions.dll')}" />
    <include if="${runtime.config=='net-4.0'}" name="${path::combine(project.packages.dir,'Microsoft.Bcl.Async.1.0.165/lib/net40/Microsoft.Threading.Tasks.Extensions.Desktop.dll')}" />
    <include if="${runtime.config=='net-4.0'}" name="${path::combine(project.packages.dir,'Microsoft.Bcl.1.0.19/lib/net40/System.Runtime.dll')}" />
    <include if="${runtime.config=='net-4.0'}" name="${path::combine(project.packages.dir,'Microsoft.Bcl.1.0.19/lib/net40/System.Threading.Tasks.dll')}" />
  </patternset>

  <target name="build">
    <csc target="library" 
        output="${current.build.dir}/nunit.framework.tests.dll"
        debug="${build.debug}" 
        define="${build.defines}"
        warninglevel="${warn}">
      <sources>
        <include name="../CommonAssemblyInfo.cs"/>
        <include name="TestContextTests.cs"/>
        <include name="Api/*.cs" />
        <include name="Assertions/*.cs" />
        <include name="Attributes/*.cs"/>
        <include name="Constraints/*.cs" />
        <include name="Internal/*.cs"/>
        <include name="Syntax/*.cs" />
        <include name="TestUtilities/**/*.cs"/>
      </sources>
      <resources prefix="NUnit.Framework.Tests">
        <include name="TestImage1.jpg"/>
        <include name="TestImage2.jpg"/>
        <include name="TestText1.txt"/>
        <include name="TestText2.txt"/>
      </resources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.testdata.dll"/>
        <include name="System.Data.dll"/>
        <include name="System.Drawing.dll"/>
        <patternset refid="Microsoft.Bcl.Async_net-4.0"></patternset>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests">
      <fileset>
        <include name="**/*.cs"/>
        <include name="*.csproj"/>
        <include name="TestImage1.jpg"/>
        <include name="TestImage2.jpg"/>
        <include name="TestText1.txt"/>
        <include name="TestText2.txt"/>
        <include name="nunit.framework.tests.build"/>
        <include name="nunitlite.tests.build"/>
		  <include name="App.xaml"/>
		  <include name="Properties/*.xml"/>
      </fileset>
    </copy>
  </target>

</project>

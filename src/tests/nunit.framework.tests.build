<?xml version="1.0"?>
<project name="NUnitFrameworkTests" default="build" basedir=".">

  <target name="build">
    <exec program="${build.command}" verbose="true">
        <arg line='"nunit.framework.tests-${msbuild.proj.suffix}.csproj"' />
        <arg line="/property:Configuration=${build.config}" />
        <arg line="/property:OutputPath=${current.build.dir}" />
        <arg value="/target:Rebuild" />
        <arg value="/verbosity:normal" />
    </exec>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests">
      <fileset>
        <include name="**/*.cs"/>
        <include name="*.csproj"/>
        <include name="TestImage1.jpg"/>
        <include name="TestImage2.jpg"/>
        <include name="TestText1.txt"/>
        <include name="TestText2.txt"/>
        <include name="nunit.framework.tests.build"/>
        <include name="nunitlite.tests.build"/>
		  <include name="App.xaml"/>
		  <include name="Properties/*.xml"/>
      </fileset>
    </copy>
  </target>

</project>

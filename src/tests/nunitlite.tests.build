<?xml version="1.0"?>
<project name="NUnitLiteTests" default="build" basedir=".">
 
  <target name="build">
    <exec program="${build.command}" verbose="true">
        <arg line='"nunitlite.tests-${msbuild.proj.suffix}.csproj"' />
        <arg line="/property:Configuration=${build.config}" />
        <arg line="/property:OutputPath=${current.build.dir}" />
        <arg value="/target:Rebuild" />
        <arg value="/verbosity:normal" />
    </exec>
  </target>
</project>

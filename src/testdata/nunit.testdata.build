<?xml version="1.0"?>
<project name="TestData" default="build" basedir=".">
  <assemblyfileset id="Microsoft.Bcl.Async_net-4.0" basedir="${path::combine(project.packages.dir,'packages')}">
    <lib>
      <include name="Microsoft.Bcl.1.0.19\lib\net40"></include>
      <include name="Microsoft.Bcl.Async.1.0.165\lib\net40"></include>
    </lib>
    <include name="Microsoft.Threading.Tasks.dll" />
    <include name="Microsoft.Threading.Tasks.Extensions.dll" />
    <include name="Microsoft.Threading.Tasks.Extensions.Desktop.dll" />
    <include name="System.Runtime.dll" />
    <include name="System.Threading.Tasks" />
  </assemblyfileset>

  <target name="build">
    <csc target="library" 
        output="${current.build.dir}/nunit.testdata.dll"
        debug="${build.debug}" 
        define="${build.defines}"
        warninglevel="${warn}">
      <sources basedir=".">
        <include name="*.cs"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.interfaces.dll"/>
      </references>
      <if test="${runtime.config=='net-4.0'}">
        <references refid="Microsoft.Bcl.Async_net-4.0"></references>
      </if>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/testdata">
      <fileset>
        <include name="*.cs"/>
        <include name="*.csproj"/>
        <include name="nunit.testdata.build"/>
        <include name="nunitlite.testdata.build"/>
      </fileset>
    </copy>
  </target>

</project>

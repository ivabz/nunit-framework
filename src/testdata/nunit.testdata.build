<?xml version="1.0"?>
<project name="TestData" default="build" basedir=".">
 <target name="build">
    <csc target="library" 
        output="${current.build.dir}/nunit.testdata.dll"
        debug="${build.debug}" 
        define="${build.defines}"
        warninglevel="${warn}"
        verbose="true">
      <sources basedir=".">
        <include name="*.cs"/>
      </sources>
      <references>
        <include name="${path::combine(current.build.dir,'nunit.framework.dll')}"/>
        <include name="${path::combine(project.packages.dir,'Microsoft.Bcl.Async.1.0.165/lib/net40/Microsoft.Threading.Tasks.dll')}" />
        <include name="${path::combine(project.packages.dir,'Microsoft.Bcl.Async.1.0.165/lib/net40/Microsoft.Threading.Tasks.Extensions.dll')}" />
        <include name="${path::combine(project.packages.dir,'Microsoft.Bcl.Async.1.0.165/lib/net40/Microsoft.Threading.Tasks.Extensions.Desktop.dll')}" />
        <include name="${path::combine(project.packages.dir,'Microsoft.Bcl.1.0.19/lib/net40/System.Runtime.dll')}" />
        <include name="${path::combine(project.packages.dir,'Microsoft.Bcl.1.0.19/lib/net40/System.Threading.Tasks.dll')}" />
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/testdata">
      <fileset>
        <include name="*.cs"/>
        <include name="*.csproj"/>
        <include name="nunit.testdata.build"/>
        <include name="nunitlite.testdata.build"/>
      </fileset>
    </copy>
  </target>

</project>
